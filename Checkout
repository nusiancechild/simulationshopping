    <!-- Script placed here -->
    <script>
        let cart = JSON.parse(localStorage.getItem('cart')) || [];

        function renderCart() {
            const cartContainer = document.getElementById('cart-items');
            const totalContainer = document.getElementById('total-price');
            cartContainer.innerHTML = '';

            let total = 0;
            cart.forEach((item, index) => {
                const cartItem = document.createElement('div');
                cartItem.className = 'cart-item';
                cartItem.innerHTML = `
                    <span>CROP HOODIE - Size: ${item.size}</span>
                    <span>$150.00</span>
                    <button onclick="removeItem(${index})">Remove</button>
                `;
                cartContainer.appendChild(cartItem);
                total += 150;
            });

            totalContainer.textContent = `Total: $${total}.00`;
        }

        function removeItem(index) {
            cart.splice(index, 1);
            localStorage.setItem('cart', JSON.stringify(cart));
            renderCart();
        }

        // Format credit card number with dashes
        function formatCreditCard(input) {
            let value = input.value.replace(/\D/g, '');
            value = value.replace(/(\d{4})(\d{1,4})/, '$1-$2');
            value = value.replace(/(\d{4})(\d{1,4})(\d{1,4})/, '$1-$2-$3');
            input.value = value;
        }

        // Format expiration date with "/"
        function formatExpiryDate(input) {
            let value = input.value.replace(/\D/g, '');
            if (value.length >= 2) {
                value = value.replace(/^(\d{2})(\d+)/, '$1/$2');
            }
            input.value = value;
        }

        // Enable/Disable billing address fields based on checkbox
        function toggleBillingAddress() {
            const isChecked = document.getElementById('same-as-shipping').checked;
            const billingFields = document.querySelectorAll('.billing-field');
            billingFields.forEach(field => {
                field.disabled = isChecked;
            });
        }

        window.onload = () => {
            renderCart();

            // Set event listeners for credit card and expiration date
            const creditCardInput = document.getElementById('credit-card');
            const expiryDateInput = document.getElementById('expiry-date');

            creditCardInput.addEventListener('input', () => formatCreditCard(creditCardInput));
            expiryDateInput.addEventListener('input', () => formatExpiryDate(expiryDateInput));

            // Submit Order Button click event
            document.querySelector('.submit-btn').addEventListener('click', function() {
                // Redirect to the thank you page
                window.location.href = 'http://localhost:63342/Shopping%20Bot/thankyou.html?_ijt=4mgvi1lc5cbtlj33gdh3q06ieh';
            });
        };
    </script>
